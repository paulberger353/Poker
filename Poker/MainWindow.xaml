<Window x:Class="Poker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Poker"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000">
    <Window.Resources>
    </Window.Resources>  
    
    <Grid Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.07*"/>
            <RowDefinition Height="0.93*"/>
        </Grid.RowDefinitions>
        
        <!--Grid zum öffnen der Einstellungen, Infos, schließen/minimieren, etc.-->
        <Grid x:Name="gridHeader" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.2*"/>
                <ColumnDefinition Width="0.8*"/>
                <ColumnDefinition Width="0.1*"/>
                <ColumnDefinition Width="0.1*"/>
            </Grid.ColumnDefinitions>

            <Button Click="Infos_Click" Grid.Row="0" Grid.Column="0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="Transparent" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>

                <Image Source="/img/header/info.png" Stretch="Uniform" Margin="1"/>
            </Button>

            <Button Click="AddBalance_Click" Grid.Column="1" Background="Gray"
                    Content="Add Balance" Width="300" Height="30" FontSize="20"
                    BorderBrush="Transparent" BorderThickness="0" IsEnabled="False"/>

            <Button Click="Minimize_Click" Grid.Column="2"
                Content="_" FontSize="25" Background="Gray">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="0 0 0 10" />
                    </Style>
                </Button.Resources>
            </Button>
            
            <Button Click="Close_Click" Grid.Column="3"
                    Content="X" FontSize="25" Background="Gray">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="0 0 10 0" />
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
        
        <!--Grid um anz. Spieler auszuwählen-->
        <Grid x:Name="gridLoadingscreen" Visibility="Visible" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.2*"></RowDefinition>
                <RowDefinition Height="0.6*"></RowDefinition>
                <RowDefinition Height="0.2*"></RowDefinition>
            </Grid.RowDefinitions>
        </Grid>
        
        <!--Eigentliches Grid des Games-->
        <Grid x:Name="gridGame" Visibility="Hidden" Grid.Row="1"></Grid>

    </Grid>
</Window>
